apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: nginx-proxy
  namespace: <%= ENV["NAMESPACE"] %>
  labels:
    app: nginx-proxy
spec:
  minReadySeconds: 30
  strategy:
    type: RollingUpdate
  replicas: <%= ENV["REPLICAS"] %>
  template:
    metadata:
      name: nginx-proxy
      labels:
        app: nginx-proxy
    spec:
      containers:
      - name: nginx-proxy
        image: koudaiii/nginx-proxy:<%= ENV["NGINX_PROXY_VERSION"] %>
        ports:
        - containerPort: 80
        - containerPort: 8000
        env:
          - name: APP_URL
            value: <%= ENV["APP_URL"] %>
          - name: APP_PORT
            value: "<%= ENV["APP_PORT"] %>"
        readinessProbe:
          httpGet:
            # Path to probe; should be cheap, but representative of typical behavior
            path: /status
            port: 8000
          initialDelaySeconds: 30
          timeoutSeconds: 1
        livenessProbe:
          httpGet:
            # Path to probe; should be cheap, but representative of typical behavior
            path: /status
            port: 8000
          initialDelaySeconds: 30
          timeoutSeconds: 1
