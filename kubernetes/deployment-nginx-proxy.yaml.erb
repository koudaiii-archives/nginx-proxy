apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: nginx
  namespace: <%= ENV["NAMESPACE"] %>
  labels:
    app: nginx
spec:
  minReadySeconds: 30
  strategy:
    type: RollingUpdate
  replicas: 1
  template:
    metadata:
      name: nginx
      labels:
        app: nginx
    spec:
      containers:
      - name: nginx
        image: koudaiii/nginx-proxy
        ports:
        - containerPort: 80
        - containerPort: 8000
        env:
          - name: APP_URL
            value: <%= ENV["APP_URL"] %>
          - name: APP_PORT
            value: <%= ENV["APP_PORT"] %>
